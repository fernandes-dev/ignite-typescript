generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id          String    @id @default(uuid())
  name        String
  description String?
  created_at  DateTime? @default(now())
}

model specifications {
  id          String    @id @default(uuid())
  name        String
  description String?
  created_at  DateTime? @default(now())
}

model users {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  password       String
  driver_license String
  is_admin       Boolean   @default(false)
  created_at     DateTime? @default(now())
}
